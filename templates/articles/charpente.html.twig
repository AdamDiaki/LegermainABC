{% extends 'base.html.twig' %}

{% block title %}Charpente!{% endblock %}


{% block body %}


    {{ encore_entry_link_tags('realisation') }}
    


{% if articles %}


    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

        <title>Carousel Template for Bootstrap</title>
    </head>
    <body>


    <main role="main">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol id="je" class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="first-slide" style="width: 100%; height:500px" src="{{ images[0].image }}"
                         alt="First slide">
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <div id="card">
                                <div class="card-body my-4">
                                    <div id ="card-text">
                                        <h1 >Charpentes</h1>
                                        <p class="rose">Les charpentes ABC Legermain couvrent une large gamme de produits (du hangar
                                            agricole aux monuments historiques en passant bien sur par la charpente
                                            traditionnelle).</p>
                                    </div>
                                </div>
                            </div>

                            <p><a class="btn btn-lg btn-success" href="#je" role="button">Lire plus</a></p>
                        </div>

                    </div>
                </div>
                {% for image in images %}
                    {% if image != images[0] %}
                        <div class="carousel-item">
                            <img class="second-slide" style="width: 100%; height: 500px" src="{{ image.image }}"
                                 alt="Second slide">
                            <div class="container">
                                <div class="carousel-caption">
                                    <div id="card">
                                        <div class="card-body my-4">
                                            <div id ="card-text">
                                                <h1>Charpentes.</h1>
                                                <p class="rose">Elles sont réalisées artisanalement en employant les assemblages
                                                    traditionnels correspondant aux style et à l’époque de l’ouvrage
                                                    (tenons mortaise, chevilles en bois...) </p>


                                            </div>
                                        </div>

                                    </div>
                                    <p><a class="btn btn-lg btn-success" href="{{ path('requestCont') }}" role="button">Demander un devis</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>

        <br id="clearfix w-100 d-md-none">



        {% for article in articles %}
            <div class="container-fluid mt-5">
                <div class="card mb-4 embed-responsive mt-5 " style="width: auto; height: 302px">
                    <div class="row no-gutters">
                        <div class="col-auto">
                            <a href="{{ path('article_show',{'id':article.id}) }}"><img
                                        src="{{ article.articleImages[0] | imagine_filter('thumb') }}"
                                        class="card-img-left featurette-image img-fluid mx-auto embed-reponsive-item"
                                        alt="..."></a>

                        </div>
                        <div class="col">
                            <div class="card-body px-2 py-2">
                                <h2 class="card-title" style="text-align: center">
                                    <a href="{{ path('article_show',{'id':article.id}) }}">{{ article.title }}</a>
                                </h2>
                                <div class="card-text  mx-4">
                                {{ article.content | raw}}

                                </div>
                                <div class="button mt-2 mx-4">
                                    <a href="{{ path('article_show',{'id':article.id}) }}" class="btn btn-success">En
                                        savoir plus</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        {% endfor %}

        <br id="clearfix w-100 d-md-none">

    </main>


    </body>

    </html>
    {% else %}
     <h1>Désolé pour le désagrement la page n'a pas été mis à jour par l'administrateur, <strong> page indisponible </strong></h1>

    {% endif %}


    {% block javascripts %}
        {{ encore_entry_script_tags('realisation') }}
    {% endblock %}


{% endblock %}
