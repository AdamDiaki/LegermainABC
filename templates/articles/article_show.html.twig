{% extends 'base.html.twig' %}

{% block title %}Article!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css">


        {{ encore_entry_link_tags('realisation') }}




    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" style="width: 100%; height:543px" src="{{ article.articleImages[0] }}"
                     alt="First slide">
                <div class="container">
                    <div class="carousel-caption text-left">
                        <div id="card">
                            <div class="card-body my-4">
                                <div id="card-text ">
                                    {% if article.category == '1 : Charpente' %}
                                        <h1 class="rose" style="font-size: 170px">Charpentes</h1>
                                    {% elseif article.category == '2 : Couverture' %}
                                        <h1 class="rose" style="font-size: 170px">Couverture</h1>
                                    {% else %}
                                        <h1 class="rose" style="font-size: 170px">Ouvrages spécifiques</h1>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <p><a class="btn btn-lg btn-success" href="{{ path('requestCont') }}" role="button">Demander un devis</a></p>
                    </div>

                </div>
            </div>

            {% for image in article.articleImages %}
                {% if image != article.articleImages[0] %}
                    <div class="carousel-item">
                        <img class="second-slide" style="width: 100%; height: 543px" src="{{ image }}"
                             alt="Second slide">
                        <div class="container">
                            <div class="carousel-caption">
                                <div id="card">
                                    <div class="card-body my-4">
                                        <div id="card-text">
                                            {% if article.category == '1 : Charpente' %}
                                                <h1 class="rose" style="font-size: 170px" align="center">Charpentes</h1>
                                            {% elseif article.category == '2 : Couverture' %}
                                                <h1 class="rose" style="font-size: 170px" align="center">Couverture</h1>
                                            {% else %}
                                                <h1 class="rose" style="font-size: 170px" align="center">Ouvrages spécifiques</h1>
                                            {% endif %}
                                        </div>
                                    </div>

                                </div>
                                <p><a class="btn btn-lg btn-success" href="#" role="button">Demander un devis</a></p>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>




    <div class="card mt-4 mb-4 mx-4">
        <div class="Card-body mb-4">
            <div style="text-align: center" class="lead card-title">
                <h2>
                    {{ article.title }}
                </h2>

            </div>
            <div class="view px-4 py-4 mx-4">
               {{ article.content | raw }}
            </div>
            {% if article.category == '1 : Charpente' %}
                <p><a href="{{ path('charpente') }}" class="btn btn-success mt-4">Revenir aux articles de charpente</a></p>
            {% elseif article.category == '2 : Couverture' %}
                <p><a href="{{ path('couverture') }}" class="btn btn-success mt-4">Revenir aux articles de couverture</a></p>
            {% else %}
                <p><a href="{{ path('ouvrage') }}" class="btn btn-success mt-4">Revenir aux articles des ouvrages
                        spécifiques</a></p>
            {% endif %}

        </div>
        <p class="lead">Partagez les œuvres captivantes!</p>
        <div class="middle mt-5">
            <a class="btn1" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2AbcLegermain.fr%2Freseaux-sociaux-creer-vos-propres-liens-pour-partager-des-pages-web-42231.html">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a class="btn1" href=" https://twitter.com/intent/tweet?url=https%3A%2F%2www.AbcLegermain.fr%2F&text=La+solution+pour+vos+besoins+de+charpentes+de+couvertures+et+d'ouvrages+spécifiques&hashtags=AbcLegermain,ArtisanDuBois">
                <i class="fab fa-twitter"></i>
            </a>

            <a class="btn1" href="https://www.instagram.com/share">
                <i class="fab fa-instagram"></i>
            </a>

        </div>

    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('realisation') }}
    {% endblock %}



{% endblock %}