{% extends 'base.html.twig' %}

{% block title 'Nos Offres' %}

{% block body %}
    <div class="jumbotron text-center">
    <h1>Nos Offres</h1>

    <div class="container">
        <h2>Les Offres toujours d'actualités</h2>
    </div>
    <div class="row flex">
    {% for offre in offres %}
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="#"> {{ offre.title }}</a>
                    </h5>
                    <p class="card-text" style="text-overflow: ellipsis;
                           overflow: hidden; white-space: nowrap;
                            ">{{ offre.content }} </p>
                    <div class="text-primary" >{{ offre.createdAt|date('d/m/Y') }}</div>
                    <a href="#" class="btn btn-primary">Postuler</a>
                    <button id="BtnInfo">Lire plus</button>
                    <div id="OfferModal" class="modal" style="
                        display: none;
                        position: fixed;
                        z-index: 1;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 100%;
                        overflow: auto;
                        background-color: rgb(0,0,0);
                        background-color: rgba(0,0,0,0.4);">
                        <div class="modal-content" style="
                              background-color: #fefefe;
                              margin: 15% auto; /* 15% from the top and centered */
                              padding: 20px;
                              border: 1px solid #888;
                              width: 80%; /* Could be more or less, depending on screen size */">
                            <span class="close" id="close" style="
                                color: black;
                                text-decoration: none;
                                cursor: pointer;"></span>
                            <h1> {{ offre.title }}</h1>
                            <p style="border-style: double; min-height: 500px;text-align: justify">{{ offre.content}}</p>
                            <p align="left"> Du :{{ offre.beginAt | date('d/m/Y')}} au :{{ offre.endAt | date('d/m/Y') }}</p>
                            <p align="left">Offre d'emploi créé le :{{ offre.createdAt | date('d/m/Y') }}</p>
                            <button id="BtnCandidate" style="width: 100px;">Postuler</button>
                        </div>
                    </div>
                    <div id="CandidateModal" class="modal" style="
                        display: none;
                        position: fixed;
                        z-index: 1;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 100%;
                        overflow: auto;
                        background-color: rgb(0,0,0);
                        background-color: rgba(0,0,0,0.4);">
                    <div class="modal-content" style="
                                background-color: #fefefe;
                              margin: 15% auto; /* 15% from the top and centered */
                              padding: 20px;
                              border: 1px solid #888;
                              width: 80%; /* Could be more or less, depending on screen size */">
                    <h2> Remplissez le formulaire !</h2>
                        {{ form_start(CandidateForm) }}
                        <button type="submit" class="btn btn-primary">Postuler</button>
                        {{ form_end(CandidateForm) }}
                    </div>
                    </div>
                    <div id="CandidateModal" class="modal" style="
                        display: none;
                        position: fixed;
                        z-index: 1;
                        left: 0;
                        top: 0;
                        width: 100%; /* Full width */
                        height: 100%; /* Full height */
                        overflow: auto; /* Enable scroll if needed */
                        background-color: rgb(0,0,0); /* Fallback color */
                        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */">
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>
    {% endfor %}
    {% block javascripts %}
        <script>
            var modal = document.getElementById("OfferModal");
            var btn = document.getElementById("BtnInfo");
            var span = document.getElementById("close");
            var btnCandidate = document.getElementById("BtnCandidate");
            var modalCandidate = document.getElementById("CandidateModal");
            btn.onclick = function () {
                modal.style.display = "block";
            }

            span.onclick=function () {
                modal.style.display = "none";
            }

            window.onclick = function (event) {
                if(event.target === modal || event.target === modalCandidate){
                    modal.style.display ="none";
                    modalCandidate.style.display = "none";
                }
            }

            btnCandidate.onclick = function () {
                modal.style.display = "none";
                modalCandidate.style.display = "block";
            }

        </script>
    {% endblock %}
{% endblock %}
